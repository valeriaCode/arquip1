<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para escribir en el almacenamiento externo -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalTrainer"
        tools:targetApi="31">

        <activity
            android:name=".controller.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PersonalTrainer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Agrega LoginActivity -->
        <activity
            android:name=".controller.activity.LoginEntrenadorActivity"
            android:exported="true" />

        <!-- Agregar la actividad RegistroClienteActivity -->
        <activity
            android:name=".controller.activity.RegistroClienteActivity"
            android:exported="true" />

        <!-- Si también tienes RegistroEntrenadorActivity, agrégala -->
        <activity
            android:name=".controller.activity.RegistroEntrenadorActivity"
            android:exported="true" />

        <!-- Agregar ClientesEntrenadorActivity -->
        <activity
            android:name=".controller.activity.ListClienteActivity"
            android:exported="true" />

        <!-- Agregar la actividad LoginClienteActivity -->
        <activity
            android:name=".controller.activity.LoginClienteActivity"
            android:exported="true" />

        <!-- Agregar datoscliente -->
        <activity
            android:name=".controller.activity.DatosClienteActivity"
            android:exported="true" />

        <!-- Agregar la nueva actividad AsignarRutinaActivity -->
        <activity
            android:name=".controller.activity.AsignarRutinaActivity"
            android:exported="true" />

    </application>

</manifest>
